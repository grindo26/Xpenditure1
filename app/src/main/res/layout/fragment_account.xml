<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context="com.xpenditure.www.xpenditure.AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        >


        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            app:srcCompat="@android:drawable/ic_menu_camera" />


        <TextView
            android:id="@+id/ChangeDP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/viewEmailId"
            android:layout_alignLeft="@+id/profileImage"
            android:layout_alignStart="@+id/profileImage"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Edit Profile Picture"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/profileImage"
            android:layout_alignLeft="@+id/profileImage"
            android:layout_below="@id/profileImage"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Your E-mail will be shown here"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/profileImage"
            android:layout_alignStart="@+id/profileImage"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/viewEmailId"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Your Fname will b shown here"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewLname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/viewFname"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Your Lname will b shown here"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/buttonlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ChangeDP"
            android:layout_alignRight="@+id/ChangeDP"
            android:layout_below="@+id/viewLname"
            android:layout_marginTop="64dp"
            android:background="@color/colorPrimary"
            android:text="Sign Out"
            android:textAlignment="center" />


        <Button
            android:id="@+id/editprofile"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonlogout"
            android:layout_alignBottom="@+id/buttonlogout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorPrimary"
            android:text="Edit Profile"
            android:textAlignment="center" />

    </RelativeLayout>


</FrameLayout>
